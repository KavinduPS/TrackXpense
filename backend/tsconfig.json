{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "preserve",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "files": ["./src/types/express/index.d.ts"],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "client"],
  "typeRoots": ["./src/types", "./node_modules/@types"]
}
